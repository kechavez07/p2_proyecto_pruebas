# Configuraci√≥n del servidor
PORT=5000
NODE_ENV=development

# Base de datos MySQL - Clever Cloud
# Reemplaza estos valores con los de tu instancia de Clever Cloud
DB_HOST=tu-host-clever-cloud.mysql.clever-cloud.com
DB_PORT=3306
DB_NAME=tu_nombre_base_datos
DB_USER=tu_usuario_mysql
DB_PASSWORD=tu_password_clever_cloud

# JWT
JWT_SECRET=tu-clave-secreta-muy-segura-aqui
JWT_EXPIRES_IN=7d

# SSL para base de datos (true para Clever Cloud)
DB_SSL=true

# Frontend URL para CORS
FRONTEND_URL=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
